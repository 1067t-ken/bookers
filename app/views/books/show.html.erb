<% if flash.now[:notice] %>
  <p><%= flash.now[:notice] %></p>
<% end %>

<p>Title: <%= @book.title %></p>
<p>Body:  <%= @book.body %></p>

<%= link_to "Edit", edit_book_path(@book) %>
<%= link_to "Back", books_path %>

<%= form_with(model: @book, url: edit_book_path(@book), method: :patch) do |form| %>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit 'Update Book' %>
  </div>
<% end %>