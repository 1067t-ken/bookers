<h1>Books</h1>
<%= flash[:notice] %>
　<table>
　  <thead>
　  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    </tr>
    </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      <%= link_to 'Show', book_path(book) %> |
      <%= link_to 'Edit', edit_book_path(book) %> |
      <%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %> 
    </td>
    </tr>
  <% end %>
  </tbody>
</table>

<h1>New book</h1>
<% if @book.errors.any? && !flash[:notice] %>
  <%= @book.errors.count %>error

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:notice] == 'successfully' %>
  <p><%= flash[:notice] %></p>
<% end %>


<%= form_with model: @book do |f| %>

  <div>
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
	
  <div>
    <h4>Content</h4>
    <%= f.text_area :body %>
  </div>
	
  <%= f.submit 'Create Book' %>
  
<% end %>